<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:screenOrientation="portrait"
    tools:context=".Fragments.MainTiketFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <!--Tiket Menunggu Konfirmasi Begin-->
            <ImageView
                android:id="@+id/mtcvTiketMenungguKonfirmasi"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPutih"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/logokonfirmasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_confirmation"
                app:layout_constraintBottom_toBottomOf="@+id/mtcvTiketMenungguKonfirmasi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mtcvTiketMenungguKonfirmasi" />

            <TextView
                android:id="@+id/mttTiketMenungguKonfirmasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Tiket Menunggu Konfirmasi"
                android:textColor="#ef5350"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/mtcvTiketMenungguKonfirmasi"
                app:layout_constraintEnd_toStartOf="@+id/arrow_menunggu"
                app:layout_constraintStart_toEndOf="@id/logokonfirmasi"
                app:layout_constraintTop_toTopOf="@+id/mtcvTiketMenungguKonfirmasi" />

            <ImageView
                android:id="@+id/arrow_menunggu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/mtcvTiketMenungguKonfirmasi"
                app:layout_constraintEnd_toEndOf="@+id/mtcvTiketMenungguKonfirmasi"
                app:layout_constraintTop_toTopOf="@+id/mtcvTiketMenungguKonfirmasi" />

            <!--Tiket Menunggu Konfirmasi End-->


            <ImageView
                android:id="@+id/garisKonfirmasi"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:background="#f5f5f5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mtcvTiketMenungguKonfirmasi" />


            <!--Belum Discan Begin-->
            <ImageView
                android:id="@+id/mtcvTiketBelumDigunakan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPutih"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/garisKonfirmasi"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/logobelum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_barcode"
                app:layout_constraintBottom_toBottomOf="@+id/mtcvTiketBelumDigunakan"
                app:layout_constraintStart_toStartOf="@+id/mtcvTiketBelumDigunakan"
                app:layout_constraintTop_toTopOf="@+id/mtcvTiketBelumDigunakan" />

            <TextView
                android:id="@+id/mttTiketBelumDigunakan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Tiket Belum Digunakan"
                android:textColor="@color/colorButton"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/mtcvTiketBelumDigunakan"
                app:layout_constraintEnd_toStartOf="@+id/arrow_belum"
                app:layout_constraintStart_toEndOf="@id/logobelum"
                app:layout_constraintTop_toTopOf="@+id/mtcvTiketBelumDigunakan" />

            <ImageView
                android:id="@+id/arrow_belum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/mtcvTiketBelumDigunakan"
                app:layout_constraintEnd_toEndOf="@+id/mtcvTiketBelumDigunakan"
                app:layout_constraintTop_toTopOf="@+id/mtcvTiketBelumDigunakan" />

            <!--Belum Discan End-->

            <ImageView
                android:id="@+id/garisBelum"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:background="#f5f5f5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mtcvTiketBelumDigunakan" />


            <!--Sudah Discan Begin-->
            <ImageView
                android:id="@+id/mtcvTiketSudahDigunakan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPutih"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/garisBelum"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/logSudah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_barcode_1"
                app:layout_constraintBottom_toBottomOf="@+id/mtcvTiketSudahDigunakan"
                app:layout_constraintStart_toStartOf="@+id/mtcvTiketSudahDigunakan"
                app:layout_constraintTop_toTopOf="@+id/mtcvTiketSudahDigunakan" />

            <TextView
                android:id="@+id/mttTiketSudahDiguanakan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Sudah Discan"
                android:textColor="#00c853"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/mtcvTiketSudahDigunakan"
                app:layout_constraintEnd_toStartOf="@+id/arrow_sudah"
                app:layout_constraintStart_toEndOf="@id/logSudah"
                app:layout_constraintTop_toTopOf="@+id/mtcvTiketSudahDigunakan" />

            <ImageView
                android:id="@+id/arrow_sudah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/mtcvTiketSudahDigunakan"
                app:layout_constraintEnd_toEndOf="@+id/mtcvTiketSudahDigunakan"
                app:layout_constraintTop_toTopOf="@+id/mtcvTiketSudahDigunakan" />
            <!--Sudah Discan End-->


        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</FrameLayout>
