<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemMantan"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nama"
                android:text="Nama Mantan\t\t: "
                android:textSize="20dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/outputNama"
                app:layout_constraintBottom_toBottomOf="@id/outputNama"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/outputNama"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/nama"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lama"
                android:text="Lama Pacaran\t: "
                android:textSize="20dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/outputLama"
                app:layout_constraintBottom_toBottomOf="@id/outputLama"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/outputLama"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/outputNama"
                app:layout_constraintStart_toEndOf="@id/lama"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kenangan"
                android:text="Kenangan\t\t\t\t\t\t\t: "
                android:textSize="20dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/outputKenangan"
                app:layout_constraintBottom_toBottomOf="@id/outputKenangan"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/outputKenangan"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/outputLama"
                app:layout_constraintStart_toEndOf="@id/kenangan"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>