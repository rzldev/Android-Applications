<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemCuaca"
        android:text="Cuaca : Berangin"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemDeskripsi"
        android:text="Deskripsi : Sangat Berangin"
        android:textSize="22dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/itemCuaca"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemSuhuMin"
        android:text="Suhu Min : 0"
        android:textSize="22dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/itemDeskripsi"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemSuhuMax"
        android:text="Suhu Max : 100"
        android:textSize="22dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/itemSuhuMin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemKelembapan"
        android:text="Kelembapan : 100"
        android:textSize="22dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/itemSuhuMax"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/itemKelembapan"/>

</androidx.constraintlayout.widget.ConstraintLayout>